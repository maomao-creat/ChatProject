<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/own_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30px">

        <ImageView
            android:id="@+id/o_userimg"
            android:layout_width="120px"
            android:layout_height="115px"
            android:layout_marginRight="30px"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/userimg"/>

        <TextView
            android:id="@+id/o_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_font_2"
            android:layout_toRightOf="@+id/o_userimg"
            android:layout_marginTop="12px"
            android:maxLines="1"
            android:textSize="32px"
            android:text="Name"/>

        <TextView
            android:id="@+id/e_adds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_font_2"
            android:layout_toRightOf="@+id/o_userimg"
            android:layout_below="@+id/o_username"
            android:layout_marginTop="12px"
            android:maxLines="1"
            android:textSize="28px"
            android:text="："/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/erweima"
            android:scaleType="fitXY"
            android:layout_width="400px"
            android:layout_height="400px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="邀请码：123456"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/t_sixteen"/>
    </LinearLayout>

</LinearLayout>