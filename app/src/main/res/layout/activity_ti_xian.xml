<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_font_0"
    android:orientation="vertical">
    <include layout="@layout/toolbar_layout" />
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:gravity="left|center"
        android:background="@color/own_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额金币:"
            android:textSize="15dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/jine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:gravity="left|center"
            android:textColor="@color/gray_font_2"
            android:text="0.00"
            android:textSize="28px"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="提现到"
        android:background="@color/own_bg"
        android:textSize="14dp"
        android:textColor="@color/gray_font_2"
        android:paddingLeft="10dp"
        android:gravity="left|center"
       />
    <LinearLayout
        android:id="@+id/ll_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:gravity="left|center"
        android:background="@color/own_bg"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/zhi_zhifubao"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="支付宝"
                android:textSize="14dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/zfbsxf"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:visibility="gone"
                android:text="系统自动扣除1%的手续费"
                android:textSize="10dp"
                android:textColor="@color/gray_font_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cb_zhifubao"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_weixin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="1dp"
        android:gravity="left|center"
        android:background="@color/own_bg"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/zhi_weixin"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="微信"
                android:textSize="14dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/wxsxf"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:visibility="gone"
                android:text="扣除1%的手续费"
                android:textSize="10dp"
                android:textColor="@color/gray_font_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_weixin"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_gravity="right|center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_ewm"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:background="@color/own_bg"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="请上传收款码"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_black"
            />
        <ImageView
            android:id="@+id/iv_ewm"
            android:scaleType="fitXY"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/qun_tianjiachengyuan"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingLeft="10dp"
        android:gravity="left"
        android:background="@color/own_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额:"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:textColor="@color/gray_font_1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="25dp"
                android:textColor="@color/gray_font_2"/>
            <EditText
                android:id="@+id/tv_jine"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:hint="请输入提现金额"
                android:inputType="numberDecimal"
                android:textSize="20dp"
                android:background="@null"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/kyyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用余额0.00元"
                android:textSize="12dp"
                android:layout_margin="10dp"
                android:textColor="@color/gray_font_1"/>
            <TextView
                android:id="@+id/qbtx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全部提现"
                android:textSize="12dp"
                android:gravity="right"
                android:layout_margin="10dp"
                android:textColor="@color/btn_2"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/queding"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/btn_2"
        android:text="确认提现"/>
</LinearLayout>
