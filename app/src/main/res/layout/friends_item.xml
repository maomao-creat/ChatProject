<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout android:id="@+id/lay_item_indexview_catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_item_indexview_catalog"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:gravity="center_vertical"
            android:background="@color/gray_bg_1"
            android:paddingLeft="25px"
            android:text="A"
            android:textColor="@color/theme_blacker"
            android:textSize="26px" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/f_layout"
        android:layout_width="match_parent"
        android:layout_below="@id/lay_item_indexview_catalog"
        android:layout_height="100px"
        android:paddingLeft="25px"
        android:paddingRight="35px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/f_img"
            android:layout_width="75px"
            android:layout_height="75px"
            android:layout_marginRight="25px"
            android:scaleType="fitXY"
            android:src="@drawable/userimg"/>

        <TextView
            android:id="@+id/f_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_font_2"
            android:text="用户昵称"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="35px"
        android:layout_marginLeft="25px"
        android:layout_below="@id/f_layout"
        android:background="@color/gray_bg_1"/>
</RelativeLayout>