<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/own_bg">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@drawable/boder_only_top_bottom_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="35px"
            android:paddingRight="35px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.2"
                android:text="账号"
                android:textColor="@color/gray_font_2" />

            <EditText
                android:id="@+id/rp_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="40px"
                android:textColor="@color/gray_font_2"
                android:textColorHint="@color/gray_font_1"
                android:maxLines="1"
                android:inputType="number"
                android:hint="请输入您的账号"
                android:textSize="28px"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_bg_1" />

        <LinearLayout
            android:id="@+id/ll_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="35px"
            android:paddingRight="35px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.2"
                android:text="旧密码"
                android:textColor="@color/gray_font_2" />

            <EditText
                android:id="@+id/rp_oldpwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="40px"
                android:textColor="@color/gray_font_2"
                android:textColorHint="@color/gray_font_1"
                android:maxLines="1"
                android:inputType="textPassword"
                android:hint="请输入厡密码"
                android:textSize="28px"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_bg_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="35px"
            android:paddingRight="35px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.2"
                android:text="新密码"
                android:textColor="@color/gray_font_2" />

            <EditText
                android:id="@+id/rp_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="40px"
                android:textColor="@color/gray_font_2"
                android:textColorHint="@color/gray_font_1"
                android:maxLines="1"
                android:inputType="textPassword"
                android:hint="请输入新密码"
                android:textSize="28px"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_bg_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="35px"
            android:paddingRight="35px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.2"
                android:text="确认密码"
                android:textColor="@color/gray_font_2" />

            <EditText
                android:id="@+id/rp_newpwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="40px"
                android:textColor="@color/gray_font_2"
                android:textColorHint="@color/gray_font_1"
                android:maxLines="1"
                android:inputType="textPassword"
                android:hint="请再次输入密码"
                android:textSize="28px"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>