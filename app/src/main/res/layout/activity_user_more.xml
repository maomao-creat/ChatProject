<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/own_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:id="@+id/ou_vip"
        android:orientation="vertical"
        android:background="@drawable/boder_only_top_bottom_gray"
        android:layout_width="match_parent"
        android:paddingTop="30px"
        android:paddingBottom="30px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:layout_marginBottom="30px"
        android:layout_marginTop="30px"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ou_huiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8px"
            android:textSize="28px"
            android:textColor="@color/gray_font_2"
            android:text="来源"/>

        <TextView
            android:id="@+id/ou_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8px"
            android:textSize="28px"
            android:textColor="@color/gray_font_1"
            android:text="通过手机通讯录添加"/>

    </RelativeLayout>
</LinearLayout>