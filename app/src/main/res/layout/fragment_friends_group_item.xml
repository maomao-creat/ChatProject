<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/gi_userimg"
        android:layout_width="170px"
        android:layout_marginTop="25px"
        android:layout_marginLeft="20px"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="13"
            android:textColor="@color/gray_font_2"
            android:textSize="65px"/>

        <TextView
            android:id="@+id/months"
            android:layout_toRightOf="@+id/days"
            android:layout_alignBottom="@+id/days"
            android:layout_marginBottom="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_font_2"
            android:text="7æœˆ"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/gi_usercontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginRight="20px"
        android:background="@color/gray_comment"
        android:padding="10px"
        android:visibility="gone"
        android:layout_toRightOf="@+id/gi_userimg"
        android:text="Data for content."
        android:textColor="@color/gray_font_2"
        android:textSize="28px" />

    <RelativeLayout
        android:id="@+id/gi_content_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_toRightOf="@+id/gi_userimg"
        android:layout_marginTop="30px">
        <ImageView
            android:id="@+id/gi_photo"
            android:layout_width="150px"
            android:layout_height="143px"
            android:layout_marginRight="12px"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/userimg" />

        <TextView
            android:id="@+id/gi_content"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_below="@+id/gi_username"
            android:layout_marginRight="20px"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@+id/gi_photo"
            android:text="Data for content."
            android:textColor="@color/gray_font_2"
            android:textSize="28px" />

        <TextView
            android:id="@+id/gi_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:layout_toRightOf="@+id/gi_photo"
            android:maxLines="1"
            android:layout_alignBottom="@+id/gi_photo"
            android:text="@string/photo_num"
            android:textColor="@color/blue_font_1"
            android:textSize="22px" />

    </RelativeLayout>
</RelativeLayout>