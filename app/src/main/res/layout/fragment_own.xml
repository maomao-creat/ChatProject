            android:orientation="vertical" android:layout_width="match_parent"
            android:padding="30px"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/o_userimg"
                android:layout_width="120px"
                android:layout_height="115px"
                android:layout_marginRight="30px"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/userimg"/>

            <TextView
                android:id="@+id/o_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_font_2"
                android:layout_toRightOf="@+id/o_userimg"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="32px"
                android:text="Name"/>

            <TextView
                android:id="@+id/o_usernumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_font_2"
                android:layout_toRightOf="@+id/o_userimg"
                android:layout_below="@+id/o_username"
                android:layout_marginTop="12px"
                android:maxLines="1"
                android:textSize="28px"
                android:text=""/>

            <ImageView
                android:layout_width="65px"
                android:layout_height="65px"
                android:src="@drawable/erweima"
                android:padding="15px"
                android:layout_marginRight="35px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qianhuiqiantou"
                android:layout_marginRight="5px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>


