<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_found" />

    <RelativeLayout
        android:id="@+id/uf_foundrl"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="136px"
        android:background="@color/white"
        android:paddingTop="20px"
        android:paddingLeft="20px"
        android:visibility="invisible"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ai_userimg"
            android:layout_width="100px"
            android:layout_height="96px"
            android:padding="25px"
            android:background="@drawable/shape_3"
            android:scaleType="fitXY"
            android:layout_marginRight="30px"
            android:src="@drawable/zoom"/>

        <TextView
            android:id="@+id/uf_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_font_2"
            android:layout_toRightOf="@+id/ai_userimg"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:textSize="32px"
            android:text="搜索："/>

        <TextView
            android:id="@+id/uf_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green_1"
            android:layout_toRightOf="@+id/uf_text"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:textSize="32px"
            android:text="Name"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_bg_1" />

    </RelativeLayout>

</LinearLayout>