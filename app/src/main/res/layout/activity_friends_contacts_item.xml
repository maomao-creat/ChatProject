<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/own_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_item_indexview_catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_indexview_catalog"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="@color/gray_bg_1"
            android:gravity="center_vertical"
            android:paddingLeft="25px"
            android:text="A"
            android:textColor="@color/colorPrimary"
            android:textSize="26px" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ai_user"
        android:layout_width="match_parent"
        android:layout_height="136px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="20px"
        android:paddingTop="20px">

        <ImageView
            android:id="@+id/ai_userimg"
            android:layout_width="100px"
            android:layout_height="96px"
            android:layout_marginRight="30px"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/userimg" />

        <TextView
            android:id="@+id/ai_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:layout_toRightOf="@+id/ai_userimg"
            android:maxLines="1"
            android:text="Name"
            android:textColor="@color/gray_font_2"
            android:textSize="32px" />

        <TextView
            android:id="@+id/ai_usernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ai_username"
            android:layout_marginTop="8px"
            android:layout_toRightOf="@+id/ai_userimg"
            android:maxLines="1"
            android:text="Message"
            android:textColor="@color/gray_font_1"
            android:textSize="28px" />

        <TextView
            android:id="@+id/ai_unagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35px"
            android:background="@drawable/shape_3"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="10px"
            android:visibility="invisible"
            android:text="添加"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/ai_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35px"
            android:background="@drawable/shape_1"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="10px"
            android:text="邀请"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/ai_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35px"
            android:padding="15px"
            android:text="已添加"
            android:textColor="@color/gray_font_1"
            android:visibility="invisible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="35px"
            android:background="@color/gray_bg_1" />

    </RelativeLayout>
</LinearLayout>