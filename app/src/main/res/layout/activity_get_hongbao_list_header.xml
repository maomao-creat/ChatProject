<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLogin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="123px"
            android:scaleType="fitXY"
            android:src="@drawable/bg_red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="30px"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <ImageView
                    android:id="@+id/gh_img"
                    android:layout_width="120px"
                    android:layout_height="115px"
                    android:layout_marginTop="20px"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/userimg" />

                <TextView
                    android:id="@+id/gh_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:maxLines="1"
                    android:text="用户名"
                    android:textColor="@color/gray_font_2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/gh_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:maxLines="1"
                    android:text="大吉大利，锦上添花"
                    android:textColor="@color/gray_font_1"
                    android:textSize="14sp" />
                <LinearLayout
                    android:id="@+id/gh_ll"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/gh_qian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/refresh_progress_3"
                        android:textSize="40sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="元"
                        android:textColor="@color/gray_font_2"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/gh_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                android:background="@color/white"
                android:maxLines="1"
                android:text="1个红包"
                android:padding="30px"
                android:textColor="@color/gray_font_2"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_bg_1" />

</LinearLayout>